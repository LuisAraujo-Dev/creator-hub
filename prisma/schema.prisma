generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

// --- MODELAGEM CREATOR HUB ---

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  username      String    @unique 
  name          String
  avatarUrl     String?
  bio           String?   
  
  themeColor    String   @default("#000000")
  theme         String   @default("light")
  
  socialLinks   SocialLinks?
  products      Product[]
  coupons       Coupon[]
  partners      Partner[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model SocialLinks {
  id          String  @id @default(cuid())
  
  // Relacionamento 1-1 com User
  userId      String  @unique
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // --- Links Existentes ---
  instagram   String?
  tiktok      String?
  youtube     String?
  twitter     String? 
  strava      String? 
  linkedin    String?
  github      String?
  whatsapp    String?

  // --- Novos Links Adicionados ---
  facebook    String?
  pinterest   String?
  telegram    String?
  discord     String?
  twitch      String?
  kwai        String?
  vsco        String?
  snapchat    String?
  onlyfans    String?
  
  // --- Controles de exibição ---
  showInsta    Boolean @default(false)
  showTiktok   Boolean @default(false)
  showYoutube  Boolean @default(false)
  showTwitter  Boolean @default(false)
  showStrava   Boolean @default(false)
  showLinkedin Boolean @default(false)
  showGithub   Boolean @default(false)
  showWhatsapp Boolean @default(false)

  // --- Novos Controles ---
  showFacebook Boolean @default(false)
  showPinterest Boolean @default(false)
  showTelegram Boolean @default(false)
  showDiscord  Boolean @default(false)
  showTwitch   Boolean @default(false)
  showKwai     Boolean @default(false)
  showVsco     Boolean @default(false)
  showSnapchat Boolean @default(false)
  showOnlyfans Boolean @default(false)
}

model Product {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title        String
  description  String?
  imageUrl     String?
  affiliateUrl String   
  price        String?  
  
  clicks       Int      @default(0) 
  active       Boolean  @default(true)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Coupon {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  storeName   String   
  code        String   
  discount    String   
  link        String?  
  
  clicks      Int      @default(0)
  active      Boolean  @default(true)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Partner {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String
  logoUrl     String?
  siteUrl     String
  
  clicks      Int      @default(0)
  active      Boolean  @default(true)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model UserSubscription {
  id                     String   @id @default(cuid())
  userId                 String   @unique
  stripeCustomerId       String?  @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?  @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?  @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")
}

model AnalyticsLog {
  id        String   @id @default(cuid())
  userId    String   
  type      String   
  itemId    String   
  createdAt DateTime @default(now())

  @@index([userId, createdAt]) 
}